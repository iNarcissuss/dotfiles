#!/bin/bash
template=/etc/X11/xorg.conf.tpl

smc=`readlink -f /dev/input/by-path/platform-applesmc.768-event | sed -e 's/\.\.\///'`

case $1 in
    up)
        mv /dev/input/smc $smc
        ;;
    down)
        mv $smc /dev/input/smc
        ;;
    timer)
        mv $smc /dev/input/smc
        (sleep 30 && mv /dev/input/smc $smc) &
        disown
        ;;
    *)
        echo "Usage: $0 <up|down>"
esac



